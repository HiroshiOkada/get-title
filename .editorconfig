# top-most .editorconfig file
root = true

# for every file
[*]

# unix style newlines
end_of_line = lf

# utf-8 charset
charset = utf-8

# delete whitespace character preceeding newline
trim_trailing_whitespace = true

# ensure file ends with a newline
insert_final_newline = true

# use space for indent and indent size 2
indent_style = space
indent_size = 2

